{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@content/*": ["../../packages/content/*"],
      "@schema": ["../../packages/schema/src/index.ts"],
      "@lib/*": ["./src/lib/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@i18n/*": ["./src/i18n/*"],
      "@remotion-app/*": ["../remotion/src/*"]
    }
  },
  "include": ["src", "astro.config.mjs", "../../packages/schema/src", "../remotion/src"]
}
