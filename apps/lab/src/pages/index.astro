      text-transform: uppercase;
      letter-spacing: 0.08em;
      font-size: 0.56rem;
    }

    .category-pill {
      background: color-mix(in srgb, var(--accent), transparent 84%);
      color: color-mix(in srgb, var(--accent), white 20%);
      border: 1px solid color-mix(in srgb, var(--accent), transparent 68%);
    }

    .difficulty-pill {
      color: #dce7ff;
      border: 1px solid rgba(122, 143, 173, 0.42);
      background: rgba(15, 27, 47, 0.6);
    }

    .demo-card h2 {
      margin: 0;
      font-size: 1.06rem;
      line-height: 1.18;
      letter-spacing: -0.02em;
      text-wrap: balance;
    }

    .demo-card p {
      margin: 0;
      color: #9eb2d2;
      font-size: 0.85rem;
      line-height: 1.55;
      max-width: 52ch;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 3;
      overflow: hidden;
    }

    .card-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.38rem;
      margin-top: auto;
    }

    .card-tags span {
      font-family: var(--mono);
      font-size: 0.58rem;
      color: color-mix(in srgb, var(--accent), white 24%);
      letter-spacing: 0.04em;
      border: 1px solid rgba(136, 158, 194, 0.32);
      border-radius: 999px;
      padding: 0.13rem 0.45rem;
      background: rgba(9, 18, 33, 0.68);
      max-width: 100%;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .card-foot {
      margin-top: 0.24rem;
      border-top: 1px solid rgba(135, 157, 191, 0.2);
      padding-top: 0.58rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 0.6rem;
      font-family: var(--mono);
      text-transform: uppercase;
      letter-spacing: 0.07em;
      font-size: 0.6rem;
      color: #dbe8ff;
    }

    .card-foot span:last-child {
      font-size: 0.84rem;
      color: var(--accent);
    }

    .empty-state {
      margin: 1rem 0 0;
      border: 1px dashed rgba(146, 171, 209, 0.34);
      border-radius: 1rem;
      padding: 1.2rem;
      color: var(--muted);
      text-align: center;
      font-family: var(--mono);
      text-transform: uppercase;
      letter-spacing: 0.08em;
      font-size: 0.68rem;
    }

    .route-loader {
      position: fixed;
      inset: 0;
      z-index: 80;
      display: grid;
      place-items: center;
      background: rgba(6, 12, 24, 0.76);
      backdrop-filter: blur(7px);
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.18s ease;
    }

    .route-loader[hidden] {
      display: none;
    }

    .route-loader.is-visible {
      opacity: 1;
    }

    .route-loader__inner {
      display: grid;
      justify-items: center;
      gap: 0.68rem;
      color: #d9e9ff;
      font-family: var(--mono);
      font-size: 0.68rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
    }

    .route-loader__spinner {
      width: 2.2rem;
      height: 2.2rem;
      border-radius: 999px;
      border: 3px solid rgba(103, 183, 255, 0.2);
      border-top-color: var(--accent);
      border-right-color: var(--accent-strong);
      animation: spin 0.7s linear infinite;
    }

    @keyframes card-in {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes float {
      from {
        transform: translate3d(0, 0, 0);
      }
      to {
        transform: translate3d(0, -22px, 0);
      }
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    @media (max-width: 980px) {
      .hero-layout {
        grid-template-columns: 1fr;
      }

      h1 {
        max-width: 14ch;
      }
    }

    @media (max-width: 720px) {
      .shell {
        width: min(1120px, calc(100vw - 1.25rem));
      }

      .hero {
        padding-top: 1.4rem;
      }

      .hero-nav {
        margin-bottom: 1.55rem;
      }

      .hero-links {
        gap: 0.74rem;
      }

      .hero-links a {
        font-size: 0.7rem;
      }

      .btn-primary,
      .btn-secondary {
        width: 100%;
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .bg-orb,
      .demo-card,
      .route-loader__spinner {
        animation: none !important;
        transition: none !important;
      }

      .demo-card {
        opacity: 1;
        transform: none;
      }
    }
  </style>
