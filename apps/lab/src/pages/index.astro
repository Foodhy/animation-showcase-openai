---
import { readFileSync } from "node:fs";
import path from "node:path";
import fg from "fast-glob";
import matter from "gray-matter";
import { SITE_URLS } from "../lib/urls";
import "../styles/tailwind.css";

const CONTENT_DIR = path.resolve(process.cwd(), "../../packages/content");

// Read all resource metadata
const files = await fg(path.join(CONTENT_DIR, "resources/*/index.mdx"));
const resources = files.map((file) => {
  const raw = readFileSync(file, "utf-8");
  const { data } = matter(raw);
  return data as Record<string, unknown>;
});

type LabResource = {
  slug: string;
  title: string;
  description: string;
  category: string;
  difficulty: string;
  tags: string[];
  labRoute: string;
  updatedAt?: Date | string;
};

const titleize = (value: string) =>
  value
    .split("-")
    .filter(Boolean)
    .map((chunk) => chunk.charAt(0).toUpperCase() + chunk.slice(1))
    .join(" ");

const normalizeTags = (value: unknown) =>
  Array.isArray(value) ? value.map((item) => String(item).trim()).filter(Boolean) : [];

const toLabResource = (data: Record<string, unknown>): LabResource | null => {
  const labRoute = String(data.labRoute ?? "").trim();
  if (!labRoute.startsWith("/")) return null;

  const slug = String(data.slug ?? "").trim();
  const title = String(data.title ?? slug).trim();
  const description = String(data.description ?? "Open the full-screen demo in Lab.").trim();
  const category = String(data.category ?? "uncategorized").trim();
  const difficulty = String(data.difficulty ?? "med").trim();

  return {
    slug,
    title,
    description,
    category,
    difficulty,
    tags: normalizeTags(data.tags),
    labRoute,
    updatedAt: data.updatedAt as Date | string | undefined,
  };
};

const difficultyLabel = (value: string) => {
  const normalized = value.toLowerCase();
  if (normalized === "easy") return "Easy";
  if (normalized === "med" || normalized === "medium") return "Medium";
  if (normalized === "hard") return "Hard";
  return "Medium";
};

const categoryPalette = ["#67b7ff", "#7f8fff", "#9a78ff", "#5ec9ff", "#8b6dff", "#58a7ff"];

const categoryAccent: Record<string, string> = {
  "web-animations": "#63beff",
  "web-pages": "#7f8fff",
  "ui-components": "#8f74ff",
  patterns: "#6caeff",
  components: "#9a78ff",
  pages: "#5fc8ff",
  prompts: "#8a71ff",
  skills: "#71b9ff",
  "mcp-servers": "#7b85ff",
  architectures: "#65b0ff",
  boilerplates: "#8b6dff",
  remotion: "#5ca8ff",
};

const labResources = resources
  .map((resource) => toLabResource(resource))
  .filter((resource): resource is LabResource => Boolean(resource));

const sortedResources = [...labResources].sort((a, b) => {
  const dateA = a.updatedAt ? new Date(a.updatedAt).getTime() : 0;
  const dateB = b.updatedAt ? new Date(b.updatedAt).getTime() : 0;
  return dateB - dateA || a.title.localeCompare(b.title);
});

const categoryCounts = sortedResources.reduce((map, resource) => {
  map.set(resource.category, (map.get(resource.category) ?? 0) + 1);
  return map;
}, new Map<string, number>());

const categoryFilters = [
  { id: "all", label: "All demos", count: sortedResources.length },
  ...Array.from(categoryCounts.entries())
    .map(([id, count]) => ({ id, label: titleize(id), count }))
    .sort((a, b) => b.count - a.count || a.label.localeCompare(b.label)),
];

const latestTimestamp = sortedResources.reduce((latest, resource) => {
  if (!resource.updatedAt) return latest;
  const timestamp = new Date(resource.updatedAt).getTime();
  if (Number.isNaN(timestamp)) return latest;
  return Math.max(latest, timestamp);
}, 0);

const latestUpdateLabel = latestTimestamp
  ? new Intl.DateTimeFormat("en-US", { month: "short", day: "numeric", year: "numeric" }).format(
      new Date(latestTimestamp)
    )
  : "N/A";

const topCategory = categoryFilters[1]?.label ?? "N/A";
const description = "Explore full-screen, runnable demos from StealThis.dev resources.";
const canonicalURL = new URL("/", Astro.site ?? "https://lab.stealthis.dev").toString();
const structuredData = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "CollectionPage",
  name: "StealThis.dev Lab",
  url: canonicalURL,
  description,
  isPartOf: {
    "@type": "WebSite",
    name: "StealThis.dev",
    url: "https://stealthis.dev/",
  },
});
---

